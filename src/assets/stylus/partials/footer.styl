footer#footer
	size 100
	background-image url('http://html.templines.com/weguard/assets/media/components/footer/bg.jpg')
	background-size cover
	background-position center center
	background-repeat no-repeat
	.overlay
		background-color rgba(0, 0, 0, 0.93)
		size 100
	.footer-content
		width 100%
		float left
		.block-logo
			size 100
			text-align center
			padding 40px 0 20px 0
			> img
				width 100px
		.block-social
			size 100
			tex-align center
			padding 10px 0 20px 0
			ul
				size 100
				padding 0
				margin 0 0 5px 0
				text-align center
				list-style none
				li
					display inline-block
					margin 0 2.5px
					a
						display block
						font-size 22px
						border 4px solid rgba(77, 77, 77, 0.5)
						width 40px
						height 45px
						line-height 40px
						tex-align center
						padding 0
						margin 0
						color alpha(#FFF, 0.6)
						transition all 250ms
						&:hover
							border-color rgba(77, 77, 77, 1)
							color #FFF
		.block-text
			size 100
			text-align center
			padding 0 0 20px 0
			.wrapper-text
				size 100
				color alpha(#FFF, 0.4)
				text-align center
				padding 2px 0
				font-weight bold
				font-size 16px
				i
					margin-right 5px
				&.text-credits
					font-weight normal
					padding-top 20px
					font-family "Lora",Georgia,sans-serif
					color alpha(#FFF, 0.8)