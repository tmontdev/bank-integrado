footer
	width 100%
	float left
	.footer-content
		width 100%
		float left
		padding 1% 10%
		background-color #f5f5f5
		.footer-social
			width 50%
			float left 
			padding 1%
			margin 0
			h1
				text-transform uppercase
				color $blue1
			p
				color #494949
				width 100%
				float left 
				padding 0% 2.5%
				margin 0

			.footer-social-icons
				width 100%
				float left 
				.footer-sc
					width 50px
					height 50px
					float left
					margin  1% 2.5% 
					border-radius 50%
					border solid 1px $blue2
					background-color $blue2
					tex-align center
					color white
					span 
						padding 27% 33%
						font-size 24px
		.footer-frame-fb
			width 50%
			float left
			height 100px
	.footer-end
		width 100%
		float left 
		background-color $blue1
		color white
		padding 2%
		text-align center