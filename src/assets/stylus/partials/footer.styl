footer
	width 100%
	float left
	background-color #463f3a
	.footer-content
		width 100%
		float left
		
		.footer-menu
			width 33.333%
			float left 
			padding 1%
			margin 0
			h1
				text-transform uppercase
				color #eaeaea
				text-shadow 1px 0px 0px black, -1px 0px 0px black, 0px 1px 0px black, 0px -1px 0px black
				
			ul 
				color  white
				list-style none
				display block
				li 
					text-transform uppercase
					a 
						color white
			span 
				text-align center
				color #eaeaea

		.footer-social
			width 33.333%
			float left 
			padding 1%
			margin 0
			h1
				text-transform uppercase
				color #eaeaea
				text-shadow 1px 0px 0px black, -1px 0px 0px black, 0px 1px 0px black, 0px -1px 0px black

			p
				color white
				width 100%
				float left 
				padding 0% 5%
				margin 0

			.footer-social-icons
				width 100%
				float left 
				.footer-sc
					width 50px
					height 50px
					float left
					margin  1% 2.5% 
					border-radius 50%
					border solid 1px #eaeaea
					background-color #eaeaea
					tex-align center
					color white
					span 
						padding 27% 33%
						font-size 24px
						color black
		.footer-frame-fb
			width 33.333%
			float left
			height 100px
