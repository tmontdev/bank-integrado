section#contact
	width 100%
	float left 
	background-color #EFE9FF
	.contact-content
		widht 100%
		float left 
		padding 1%
		h2
			font-size 3.2em
			color $blue1
			text-transform uppercase
			padding 0
			margin 0
		p
			font-size 1.1em
			color #707070
		.form-area
			width 100%
			float left 
			padding 0% 10%
			
			form 
				width 100%
				float left
				padding 5% 10%
				box-shadow 1px 1px 10px black
				background-color white
				label
					width 100%
					float left
					color $blue4
					span
						color red
				.form-item
					width 100%
					height 35px
					padding 0% 2.5%
					float left 
					font-size 15px
					border solid 1px #bbbbbb
					border-radius 0px
					margin 1%
					color $blue1
					background-color #EEE
					&:hover
						border solid 1px $blue1
				#form-msg
					height 200px
				button
					background-color $blue1
					border-radius 0px
					border solid white 1px
					color white
					padding 2% 3%
					font-size 1.5em
					margin 0% 1%
					&:hover
						border solid 1px $blue1
						
				#clean-button
					background-color $blue3
					margin 0% 5%
					&:hover
						border solid 1px $blue3


				