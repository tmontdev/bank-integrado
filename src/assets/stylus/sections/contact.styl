section#contact
	size 100
	padding 20px 0
	.block-intro
		size 100
		h1
			size 100
			padding 5px 0
			margin 0
			color $blue1
			text-align center
			text-transform uppercase
			font-size 3.2em
		p
			size 70
			margin 0 0 0 15%
			text-align center
			font-size 1.1em
			color #555
	.block-form
		size 100
		padding 50px 0 20px 0
		.side-form
			size 70
			form
				display block
			.form-group
				size 50
				padding 7.5px
				position relative
				&.full
					size 100
				input.form-control,
				textarea.form-control
					size 100
					transition all .3s
					border 1px solid alpha($blue1, 0.1)
					border-radius 4px
					&:focus
						border 1px solid alpha($blue2, 0.3)
				input.form-control
					height 50px
					padding 0 15px
					transition all .3s ease-in-out
					&:focus 
						padding-left 50px
						& + label.form-identifier
							width 40px
				label.form-identifier
					position absolute
					top 7.5px
					left 7.5px
					background-color $blue2
					height 50px
					color #fff
					border-radius 4px 0 0 4px
					line-height 50px
					font-size 1.2em
					overflow hidden
					width 0
					text-align center
					transition all .3s ease-in-out
				textarea.form-control
					resize none
					padding 15px 15px
					font-family 'PT Sans', sans-serif
				button.btn-send
					display inline-block
					padding 10px 40px
					background-color $blue2
					font-size 1.1em
					text-shadow 1px 1px 0 rgba(10,0,0,0.2)
					border-radius 20px
					color #fff
					border 0
					cursor pointer
					font-weight bold
					i
						margin-right 3.2px
						font-size 0.9em
		.side-fb
			size 30
			padding 6px 15px 0 15px
			h2
				size 100
				text-align center
				padding 0
				margin 0
				color $blue1
			.wrapper-iframe
				size 100
				padding-top 20px
				iframe
					max-width 100%