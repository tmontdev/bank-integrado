section#depositions
	size 100
	padding 40px 0
	h1
		size 100
		padding 10px 0
		margin 0
		color $blue1
		text-align center
		text-transform uppercase
		font-size 3.2em
	.block-depositions
		size 100
		padding 10px 0
		.item-deposition
			size 33.333
			padding 10px
			.content-item
				size 100
				background-image url('http://oneclickpixels.com/investable/assets/images/testimonials/img-2.jpg')
				background-repeat no-repeat
				backgorund-size cover
				background-position center center
				border-radius 4px
				overflow hidden
				text-align center
				box-shadow 0px 8px 28px 0px rgba(0,0,0,.2)
				position relative
				height 350px
				.overlay-item
					background-color rgba(0, 0, 0, 0.7)
					position absolute
					top 0
					left 0
					height 100%
					size 100
				blockquote
					border none
					color #fff
					font-size 18px
					size 100
					padding 20px
					margin 0
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
					p
						font-family 'Lora', Georgia, sans-serif
						font-style italic
						size 100
						font-size 0.9em
					footer
						font-style normal
						margin 10px 0
						text-transform uppercase
						font-size 11px
						letter-spacing .4px
						font-weight bold
						&:before
							content '\2014 \00A0'
					img
						width 50px
						border-radius 50%
						display inline-block
						margin-top 10px
						box-shadow 0px 0px 20px rgba(0,0,0,.4)