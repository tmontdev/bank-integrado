section#home
	size 100
	height 100vh
	background-color alpha($blue1, 0.7)
	position relative
	.overlay
		size 100
		height 100%
		background-image url('http://oneclickpixels.com/investable/assets/images/utility/bg-chart.png')
		background-position left bottom
		background-repeat no-repeat
	h1,
	h2
		padding 0
		margin 0
		text-align center
		size 100
		font-family 'Open Sans', Arial, sans-serif
		text-transform uppercase
	h1
		padding-top 20vh
		font-size 0.8em
		font-weight 400
		text-transform uppercase
		letter-spacing 1px
		color alpha(#f2ffd5, 0.8)
		span
			display inline-block
			position relative
			z-index 2
			&:after,
			&:before
				content ''
				display block
				width 40px
				height 1px
				background-color alpha(#f2ffd5, 0.4)
				position absolute
				top 50%
				margin-top -0.5px
				z-index 1
			&:after
				left 100%
				margin-left -4px
			&:before
				right 100%
	h2
		color #f2ffd5
		font-size 3em
		text-shadow 1px 2px 0 rgba(0,0,0,0.3)
	.form-simulator
		size 90
		margin-left 5%
		padding-top 50px
		.field-wrapper
			size 25
			padding 0 5px
			position relative
			input.form-control
				size 100
				border-radius 20px
				border 1px solid #FFF
				text-align center
				font-size 1em
				height 50px
				color #111
				display block
				padding 6px 12px
				background-color #FFF
				ap(box-shadow, inset 0 1px 1px rgba(0,0,0,.075))
				&:focus
					background 0 0
					color #FFF
					& + label.form-identifier > span,
					^[-2] label.form-identifier.have-characters > span
						transform translate3d(0,-38px,0)
						background $blue2
						color #FFF
						font-size 13px
						i
							display none
						&:after
							background $blue2
			label.form-identifier
				display inline-block
				text-align center
				ap(user-select, none)
				-webkit-touch-callout none
				-moz-osx-font-smoothing grayscale
				-webkit-font-smoothing antialiased
				position absolute
				left 0
				top 11px
				width 100%
				pointer-events none
				color #FFF
				font-size 1em
				line-height 20px
				margin-bottom 5px
				> span
					position relative
					display inline-block
					padding 4px 12px
					border-radius 5px
					transition all .3s ease-in-out
					text-shadow 0 0
					background 0 0
					color #999
					font-size 1em
					&:after
						content ''
						height 6px
						width 6px
						position absolute
						top 100%
						left 50%
						margin-top -3px
						margin-left -3px
						background 0 0
						transform rotate(45deg)
					> i
						margin-right 3px
			button.btn-simulate
				size 100
				font-size 1em
				padding-top 15px
				padding-bottom 15px
				text-shadow 1px 1px 0 rgba(10,0,0,.2)
				height 50px
				display inline-block
				border-radius 20px
				background-color $blue2
				color #FFF
				transition background-color .3s,color .3s
				border 0
				cursor pointer
				text-shadow 1px 2px 0 rgba(0,0,0,.3)
				> i
					margin-right 3px
				&:before
					content ''
					position absolute
					top -20px
					left -20px
					bottom -20px
					right -20px
					background inherit
					border-radius 50px
					z-index -1
					opacity .4
					transform scale3d(0.8,.5,1)
				&:hover
					transition background-color .1s .3s,color .1s .3s
					color #FFF
					background-color $blue2
					animation anim-btnregister-1 .3s forwards
					&:before
						animation anim-btnregister-2 .3s .3s forwards
	.wrapper-logo
		size 40
		position absolute
		bottom 7%
		left 30%
		> img
			max-width 100px
			display block
			margin 0 auto